<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="2.0dp"
    android:paddingLeft="5.0dp"
    android:paddingRight="5.0dp"
    android:paddingTop="2.0dp" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/clear"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/clear"
            android:gravity="center"
            android:padding="0.0dp"
            android:text=""
            android:focusable="false"
            android:clickable="false"
            android:visibility="visible" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/clear"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_thumb"
            android:layout_width="@dimen/workbook_thumb_width"
            android:layout_height="@dimen/workbook_thumb_height"
            android:layout_gravity="end|center"
            android:layout_marginBottom="5.0dp"
            android:layout_marginLeft="5.0dp"
            android:layout_marginTop="5.0dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/no_workbook_thumb_nor" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_center"
        android:layout_width="0.0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10.0dp"
        android:layout_weight="1"
        android:background="@color/clear"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginBottom="0.0dp"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginTop="10.0dp"
            android:background="@color/clear"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_seriese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:background="@drawable/bg_rounded_pure_red"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="3.0dp"
                android:paddingLeft="5.0dp"
                android:paddingRight="5.0dp"
                android:paddingTop="3.0dp"
                android:text=""
                android:textColor="@color/pure_red"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginBottom="0.0dp"
                android:layout_marginLeft="0.0dp"
                android:background="@color/clear"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="3.0dp"
                android:paddingLeft="5.0dp"
                android:paddingRight="5.0dp"
                android:paddingTop="3.0dp"
                android:text=""
                android:textColor="@color/very_dark_gray_2"
                android:textSize="13.0sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_release"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center"
                android:layout_marginBottom="0.0dp"
                android:layout_marginLeft="0.0dp"
                android:background="@color/clear"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="3.0dp"
                android:paddingLeft="5.0dp"
                android:paddingRight="5.0dp"
                android:paddingTop="3.0dp"
                android:text=""
                android:textColor="@color/very_dark_gray_2"
                android:textSize="12.0sp"
                android:textStyle="italic"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginBottom="5.0dp"
            android:layout_marginLeft="5.0dp"
            android:layout_marginRight="10.0dp"
            android:layout_marginTop="2.0dp"
            android:background="@color/clear"
            android:gravity="start"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginBottom="0.0dp"
                android:layout_marginLeft="0.0dp"
                android:background="@color/clear"
                android:gravity="center|start"
                android:maxLines="1"
                android:paddingBottom="3.0dp"
                android:paddingLeft="5.0dp"
                android:paddingRight="5.0dp"
                android:paddingTop="3.0dp"
                android:text=""
                android:textColor="@color/very_dark_gray_2"
                android:textSize="14.0sp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginBottom="0.0dp"
                android:layout_marginLeft="0.0dp"
                android:background="@color/clear"
                android:gravity="center|start"
                android:maxLines="2"
                android:paddingBottom="3.0dp"
                android:paddingLeft="5.0dp"
                android:paddingRight="5.0dp"
                android:paddingTop="3.0dp"
                android:text=""
                android:textColor="@color/very_dark_gray"
                android:textSize="14.0sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>